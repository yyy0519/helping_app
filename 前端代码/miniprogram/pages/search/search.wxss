@import "/wxSearch/wxSearch.wxss";
.icon1{
    width: 370px;
    height: 370px;
    margin-top: 40px;
    margin-left: 0px;
}
.img{
    width:40px; 
    height: 40px;
    border-radius: 30px;
}
.xinxi{
    display: flex;
    flex-direction: row;
    margin-left: 5px;
}

.box{
    height:180px;
    box-shadow: #ccc  0 0 0rpx 0rpx;
    color: rgb(106, 106, 106);
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    background-color: rgb(255, 255, 255);
    margin-left: 5px;
    margin-right: 5px;
    padding: 5px;
}
.loc-end{
    display: flex;
    justify-content: space-between; 
    margin-right: 5px;
    margin-top: 5px;
}
.title{
    margin-left: 5px;
    margin-right: 5px;
    font-size: 20px;
    color: black;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; 
}
.detail{
    margin-left: 5px;
    margin-right: 5px;
    margin-top: -12px;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis; 
}
.nicheng{
    margin-top: -3px;
    margin-left: 5px;
    font-size: 16px;
    color: black;
}
.date{
    width: 344rpx; 
    height: 42rpx; 
}
.column{
    display: flex;
    flex-direction: column;
    margin-left: 10px;
}
.tiptail{
    margin-right: 5px;
    margin-left: 2px;
    margin-top: 5px;
}
.sorttxt{
    margin-left: 18px;
    color:#402c47;
    font-size: 15px;
}
.sortbtn{ 
   font-size: 17px;
   position: relative; 
   right:91px;
   border: 1px solid #563b61; 
   padding:4px;
   color:#423049;
   background-color:#fdfdfd ;
   margin-top: 5px;
}
.sort{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    position: relative;
    padding:10px;
    border: 1px solid #563b61; 
    margin-left: 8px;
    margin-right: 8px;
    border-radius: 8px;
    background-color: #fff;
}
.icon{
    width:19px;
    height:19px;
    position: relative;
    right:4px;
    top:3px;
}
.blank{
    height:10px;
}
.item{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; 
    margin-left:3px;
    margin-top: 0px;
    margin-bottom: 15px;
}
