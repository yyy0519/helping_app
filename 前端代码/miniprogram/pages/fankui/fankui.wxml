<!--pages/fankui/fankui.wxml-->
<view class="page-container">
    <view class="form-group">
        <view class="label">反馈标题：</view>
        <input  class="input" name="tip" placeholder="请输入反馈标题" bindinput="inputBind1"/>
    </view>
    <view class="form-group">
        <view class="label">反馈描述：</view>
        <textarea class="textarea" name="details"placeholder="请输入反馈描述" maxlength="9999" bindinput="inputBind2" auto-focus="true"></textarea>
    </view>
    <button class="btn" bindtap="submit">提交</button>
</view>
